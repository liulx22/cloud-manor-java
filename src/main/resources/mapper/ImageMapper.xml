<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.buba.cloud.cloudManor.mapper.ImageMapper">
<!--庄主详情页回显图片-->
    <select id="findphoto" resultType="com.buba.cloud.cloudManor.pojo.Image">
       select image.img_dir imgDir,`user`.user_name userName from user,image  where `user`.image_id=image.id and `user`.id=#{uid}
    </select>

</mapper>